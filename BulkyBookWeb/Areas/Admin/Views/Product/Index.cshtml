@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
</div>

<table id="tblData" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th>Price</th>
        <th>Author</th>
        <th>Category</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Title</td>
            <td>@product.ISBN</td>
            <td>@product.ListPrice</td>
            <td>@product.Author</td>
            <td>@product.Category.Name</td>

            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square">Edit</i>
                    </a>

                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                       class="btn btn-outline-danger">
                        <i class="bi bi-trash-fill">Delete</i>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            loadDataTables();
        });

        function loadDataTables() {
            console.log("Called")
            dataTable = new DataTable('#tblData', {
                "ajax": '/admin/product/getAll',
                "columns": [
                    {data: 'title', width: '15%'},
                    {data: 'isbn', width: '15%'},
                    {data: 'listPrice', width: '15%'},
                    {data: 'author', width: '15%'},
                    {data: 'category.name', width: '15%'}
                ]
            });
        }
    </script>
}